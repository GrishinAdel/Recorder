<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyRecords" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyFAB.StyleForMic" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="materialThemeOverlay">@style/MyFabOverlay</item>
        <item name="android:src">@drawable/ic_mic_white</item>
    </style>

    <style name="MyFAB.StyleForPlay" parent="MyFAB.StyleForMic">
        <item name="android:src">@drawable/ic_play_record</item>
    </style>

    <style name="MyFabOverlay">
        <item name="colorSecondary">@color/blue1</item>
        <!-- color used by the icon -->
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="MyFAB.StyleForMicStop" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="materialThemeOverlay">@style/MyFabOverlay</item>
        <item name="android:src">@drawable/ic_stop_record</item>
    </style>



</resources>